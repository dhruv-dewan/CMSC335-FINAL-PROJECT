<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/public/styles.css">
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        table {
            margin: 0 auto;
            max-width: 100%;
            width: auto;
        }
    </style>
</head>
<body>
    <header>
        <h1>Trivia Leaderboard</h1>
        <p>See how you rank among other players!</p>
    </header>
    <main>
        <% if (leaderboard && leaderboard.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Username</th>
                        <th>High Score</th>
                        <th>Time Taken (seconds)</th>
                    </tr>
                </thead>
                <tbody>
                    <% leaderboard.forEach((user, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= user.username %></td>
                            <td><%= user.highScore %></td>
                            <td><%= user.timeTaken || "N/A" %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No players have recorded high scores yet. Be the first!</p>
        <% } %>
        <div style="text-align: center;">
            <a class="butt" href="/dashboard" class="btn">Back to Dashboard</a>
        </div>
    </main>
    
</body>
</html>
