<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trivia Game</title>
    <link rel="stylesheet" href="/public/styles.css">
    <style>
        ul {
            list-style-type: none; /* Removes bullet points */
            padding: 0; /* Removes default padding */
            margin: 0; /* Removes default margin */
        }
    </style>
</head>
<body>
    <header>
        <h1>Trivia Game</h1>
        <p>Test your knowledge with these trivia questions!</p>
    </header>
    <main>
        <div id="trivia-container">
            <form id="trivia-form" method="post" action="/submit-answers">
                <% if (questions && questions.length > 0) { %>
                    <% questions.forEach((question, index) => { %>
                        <div class="trivia-question">
                            <h3>Question <%= index + 1 %>: <%= question.question %></h3>
                            <ul>
                                <% question.options.forEach((option, optIndex) => { %>
                                    <li>
                                        <label>
                                            <input 
                                                type="radio" 
                                                name="question-<%= index %>" 
                                                value="<%= option %>" 
                                                required>
                                            <%= option %>
                                        </label>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No questions available at the moment. Please try again later!</p>
                <% } %>
                <div class="butt-container">
                    <button class="butt" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
